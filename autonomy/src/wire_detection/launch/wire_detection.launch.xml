<launch>
  <node 
    pkg="wire_detection" 
    exec="wire_detection_node" 
    name="wire_detection_node">
    <param from="$(find-pkg-share common_utils)/wire_tracking_config.yaml" />
  </node>

    <node 
    pkg="rviz2" 
    exec="rviz2" 
    name="rviz2" 
    if="$(env RVIZ)"
    args="-d $(find-pkg-share wire_detection)/rviz/wire_detection.rviz --ros-args --log-level WARN" />
    
</launch>