<launch>  
  <node 
    pkg="wire_tracking" 
    exec="wire_tracking_node" 
    name="wire_tracking_node">
    <param 
      from="$(find-pkg-share common_utils)/wire_tracking_config.yaml" />
  </node>

  <node 
    pkg="rviz2" 
    exec="rviz2" 
    name="rviz2" 
    args="-d $(find-pkg-share wire_tracking)/rviz/wire_tracking.rviz --ros-args --log-level WARN" />
    
     <executable cmd="ros2 bag record -d 90 -o /root/data_collection/wire_tracking_$(env ROSBAG_DATE) 
     /wire_cam/zed_node/left/image_rect_color 
     /wire_cam/zed_node/pose 
     /wire_cam/zed_node/depth/depth_registered 
     /pose_cam/zed_node/pose" output="log" />

</launch>
